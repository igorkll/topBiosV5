    if file ~= originalInvoke(eeprom_address, "get") then
        if yesno("update?") then
            writeSplash()
            originalInvoke(eeprom_address, "set", file)
            shutdown(true)
        end
    else
        if not noSplash then splash("update not found") end
    end
