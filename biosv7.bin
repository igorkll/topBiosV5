local function isColor()
    return depth ~= 1
end

local function optimizeColor(color, simpleColor, bf)
    if not simpleColor then simpleColor = color end
    if depth ~= 1 then
        if depth == 4 then
            return simpleColor
        else
            return color
        end
    else
        return (bf and 0xFFFFFF) or 0
    end
end

